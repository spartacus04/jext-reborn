{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Jext Plugin Manager",
	"version": "2.1.0",
	"identifier": "com.spartacus04.jext-tool",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "JEXT Companion",
				"width": 1600,
				"height": 900,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"linux": {
			"deb": {
				"depends": ["ffmpeg"]
			}
		}
	}
}
